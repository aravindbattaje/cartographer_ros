
<robot name="autorally_2d">
  <material name="gray">
    <color rgba="0.2 0.2 0.2 1" />
  </material>

  <link name="velodyne">
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <cylinder length="0.05" radius="0.03" />
      </geometry>
      <material name="gray" />
    </visual>
  </link>

  <link name="base_link" />

  <joint name="velodyne_joint" type="fixed">
    <parent link="base_link" />
    <child link="velodyne" />
    <origin xyz="0.1 0 0.05" />
  </joint>

</robot>
